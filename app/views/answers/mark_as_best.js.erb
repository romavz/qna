
var bestAnswerId = '<%= j @best_answer.id %>'

var prev_best_answer = $('.answer.best-answer');
prev_best_answer.removeClass('best-answer');
prev_best_answer.find('a:contains("Mark as best")').removeClass('hidden')

var new_best_answer = $('.answer#' + bestAnswerId);
new_best_answer.remove();
new_best_answer.addClass('best-answer');
new_best_answer.find('a:contains("Mark as best")').addClass('hidden')

$('.answers').prepend(new_best_answer);
